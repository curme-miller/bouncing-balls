{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cpp build",
            "type": "cppbuild",
            "command": "E:\\TDM-gcc\\bin\\g++.exe",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                "-I",
                "${workspaceFolder}",
                "-lwinmm",
                "-lEasyX",
                "-lgdi32",
                "-lole32",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": "build"
        }
    ]
}



